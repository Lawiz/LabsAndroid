<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key"/>
        <EditText
            android:id="@+id/EditSetKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="set key"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value"/>
        <EditText
            android:hint="Set Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EditSetValue"

            />
        <Button
            android:text="Set Value"
            android:paddingBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="SetValue"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key"/>
        <EditText
            android:id="@+id/EditGetKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="set key"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value"/>
        <EditText
            android:hint="Set Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EditGetValue"

            />
        <Button
            android:text="Get value"
            android:paddingBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="GetValue"
            />




    </LinearLayout>

</android.support.constraint.ConstraintLayout>